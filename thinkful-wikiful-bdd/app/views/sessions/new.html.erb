  <h2>Log In</h2>

  <%= render partial: 'shared/messages', object: @user %>

  <div class="form-container">
    <%= form_tag login_path do %>
      <div class="field">
        <%= label_tag :email %><br />
        <%= text_field_tag :email, params[:email] %>
      </div>
      <div class="field">
        <%= label_tag :password %><br />
        <%= text_field_tag :password, params[:password], type: "password" %>
      </div>
      <div class="actions">
        <%= submit_tag "Log In", class: "btn btn-lg btn-primary" %>
        <%= link_to "Cancel", root_path %>
      </div>
    <% end %>
  </div>
