<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <div class='navbar-header'><%= link_to "Wikiful", root_path, class: 'brand' %></div>
      <div class='navbar-collapse'>
        <ul class="nav navbar-nav">
          <li>
            <%= link_to(:root) do %>
              <i class="icon-large icon-home"></i>
              Home
            <% end %>
          </li>
          <li class="dropdown">
            <%= link_to('#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown') do %>
              <i class="icon-large icon-th-list"></i>
              Categories
              <span class="caret"></span>
              <ul class="dropdown-menu" role="menu">
                <% @categories.each do |category| %>
                  <%= "<li>#{link_to(category.name, category)}</li>".html_safe %>
                <% end %>
              </ul>
            <% end %>
          </li>
          <li>
            <%= link_to(new_article_path) do %>
              <i class="icon-large icon-edit"></i>
              Write a Wiki
            <% end %>
          </li>
        </ul>
      </div>
      <div style="float: right;">
        <div class='session-controls'>
          <% if current_user? %>
            <%= link_to "Log Out", logout_path, class: 'btn btn-sm btn-primary' %>
            Logged in as <%= current_user.email %>.
          <% else %>
            <div class="btn-group">
              <%= link_to "Sign Up", signup_path, class: "btn btn-sm btn-primary" %>
              <%= link_to "Log In", login_path, class: "btn btn-sm btn-primary" %>
            </div>
          <% end %>
       </div>
      </div>
    </div>
 </div>
</div>
